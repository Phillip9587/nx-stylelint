{
  "$schema": "http://json-schema.org/schema",
  "$id": "NxStylelintScssConfiguration",
  "title": "Add scss support to a nx-stylelint configuration.",
  "type": "object",
  "properties": {
    "project": {
      "type": "string",
      "description": "The name of the project.",
      "$default": {
        "$source": "projectName"
      }
    },
    "skipFormat": {
      "description": "Skip formatting files.",
      "type": "boolean",
      "default": false
    }
  },
  "additionalItems": false,
  "required": ["project"]
}
